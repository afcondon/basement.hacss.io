{
  "name": "basement.hacss.io",
  "version": "1.0.0",
  "description": "Brower-based code editor that uses Hacss.",
  "main": "public/index.html",
  "scripts": {
    "build": "webpack --mode production",
    "postinstall": "mkdirp lib && nugget http://raw.githubusercontent.com/ai/autoprefixer-rails/master/vendor/autoprefixer.js -o lib/autoprefixer.js",
    "test": "echo \"You should add some tests.\""
  },
  "prettier": "@hacss/prettier-config",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hacss/basement.hacss.io.git"
  },
  "keywords": [
    "hacss",
    "css",
    "inline",
    "style",
    "code",
    "editor",
    "basement",
    "playground",
    "sandbox"
  ],
  "author": "Nick Saunders",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hacss/basement.hacss.io/issues"
  },
  "homepage": "https://github.com/hacss/basement.hacss.io#readme",
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-react": "^7.9.4",
    "@hacss/build": "^2.1.2",
    "@hacss/eslint-config": "^1.0.0",
    "@hacss/plugin-expand": "^1.2.0",
    "@hacss/plugin-variables": "^1.3.0",
    "@hacss/prettier-config": "^1.0.0",
    "babel-loader": "^8.1.0",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.5.3",
    "debounce": "^1.2.0",
    "eslint": "^6.8.0",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "html-webpack-plugin": "^4.3.0",
    "html-webpack-tags-plugin": "^2.0.17",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "prettier": "^2.0.5",
    "style-loader": "^1.2.1",
    "uniqid": "^5.2.0",
    "val-loader": "^2.1.1",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "dependencies": {
    "mkdirp": "^1.0.4",
    "nugget": "^2.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "eslint --cache --fix",
      "npm test"
    ]
  }
}
